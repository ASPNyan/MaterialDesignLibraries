<MudButton Class="primary-container on-primary-container-text" OnClick="@(() => DisplayText = !DisplayText)"
           Style="position: relative; left: 100%; transform: translate(-100%);">
    Display @(DisplayText ? "Scheme" : "Text") Colors
</MudButton>

@code {
    private string Class => "SchemeTileContainer " + BackgroundClass;
    
    private bool DisplayText { get; set; }

    private string GetClass(string classString) => DisplayText ? classString + "-text TextDisplay" : classString;
    private string GetTooltip(string val) => DisplayText ? val + "-text" : val;
    
    [Parameter]
    public string BackgroundClass { get; set; } = "background";
}