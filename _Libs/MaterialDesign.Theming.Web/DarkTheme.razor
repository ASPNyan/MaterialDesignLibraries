@using MaterialDesign.Web.Exceptions
<BoundTheme @bind-Theme="@Theme" @Overwrite="@true"/>

@code {
    private Theme? _theme;

    private Theme? Theme
    {
        get
        {
            _theme?.SetDark();
            return _theme;
        }
        set => _theme = value;
    }
        
    [Parameter] 
    public RenderFragment? ChildContent { get; set; }

    protected override void OnParametersSet()
    {
        if (ChildContent is not null) throw VoidElementException.ChildContentIsDisallowed<DarkTheme>();
    }
}